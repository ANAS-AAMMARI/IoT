Vagrant.configure("2") do |config|
  # Base OS
  config.vm.box = "almalinux/9"

  # Define VM
  config.vm.define "aaammariS" do |vm|
    vm.vm.hostname = "aaammariS"
    vm.vm.network "private_network", ip: "192.168.56.110"
    vm.vm.network "forwarded_port", guest: 80, host: 80

    # VM resources
    vm.vm.provider "virtualbox" do |vb|
      vb.name = "aaammariS"
      vb.cpus = 2
      vb.memory = 2048
    end

    # Provision K3s on startup
    vm.vm.provision "shell", path: "./scripts/install_k3s.sh"
  end
end
